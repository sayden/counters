package templates

import "github.com/sayden/counters/server"

templ Counters(res server.CounterImages) {
	for _, counter := range res {
		<div>
			<img id={ counter.Id } class="rounded-md m-2" src={ counter.CounterImage } alt={ counter.Id }/>
			<p class="mt-1 truncate text-xs/5 text-gray-500">{ counter.PrettyName }</p>
		</div>
	}
}
